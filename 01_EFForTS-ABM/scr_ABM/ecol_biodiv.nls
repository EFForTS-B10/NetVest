
to init-biodiversity
  
  ;; Check biodiversity initialization
  if (biodiv_ncinv = "habitatquality") [biodiv-ncinv-init 
                                        biodiv-ncinv-update]
end


to run-biodiversity
  
  if (ticks mod ecol_biodiv_interval = 0)
  [
    ;; Check biodiversity:
    if (biodiv_ncinv = "habitatquality") [biodiv-ncinv-update]
  ]
  
end