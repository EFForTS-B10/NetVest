@article{Koh2011,
abstract = {Rising global demands for water, food and energy are intensifying land-use conflicts, contributing to greenhouse gas emissions, and exacerbating threats to natural ecosystems and wildlife. It is imperative that we develop ways to balance our growing consumptive needs with environmental protection, particularly in the tropics where population growth has been most rapid, the people are poorest, and biodiversity is richest and yet most threatened globally. Environmental and social scientists can help by developing decision-support tools that will enable decision-makers to evaluate the consequences and tradeoffs of pursuing alternative development options in relation to the biophysical, socioeconomic, and technical constraints and considerations within individual societies and landscapes. Ultimately, scientists play a crucial role in helping decision-makers achieve a careful balance of the various priorities within each society, which is needed to ensure sustainable development for the benefit of both humans and the environment. Der steigende globale Bedarf an Wasser, Nahrung und Energie versch{\"{a}}rft Landnutzungskonflikte, er tr{\"{a}}gt zur Emission von Treibhausgasen bei und verst{\"{a}}rkt Bedrohungen f{\"{u}}r nat{\"{u}}rliche {\"{O}}kosysteme und Wildtiere. Es ist zwingend erforderlich, dass wir Wege finden, um unsere wachsenden konsumptiven Bed{\"{u}}rfnisse und den Schutz der Umwelt auszubalancieren, insbesondere in den Tropen, wo das Bev{\"{o}}lkerungswachstum am gr{\"{o}}{\ss}ten und die Menschen am {\"{a}}rmsten sind und wo die Biodiversit{\"{a}}t am reichsten aber dennoch am st{\"{a}}rksten gef{\"{a}}hrdet ist. Umwelt- und Sozialwissenschaftler k{\"{o}}nnen helfen, indem sie Entscheidungshilfen entwickeln, die Entscheidungstr{\"{a}}gern erm{\"{o}}glichen, die Konsequenzen und Vor- und Nachteile abzuw{\"{a}}gen, die mit alternativen Entwicklungsm{\"{o}}glichkeiten hinsichtlich biophysikalischer, sozio{\"{o}}konomischer und technischer Zw{\"{a}}nge aber auch mit Erw{\"{a}}gungen innerhalb einzelner Gesellschaften oder Landschaften verbunden sind. Letztendlich spielen Wissenschaftler eine entscheidende Rolle, indem sie den Entscheidungstr{\"{a}}gern helfen, eine sorgf{\"{a}}ltige Balance zwischen den verschiedenen Priorit{\"{a}}ten innerhalb einer Gesellschaft zu erreichen. Dies ist erforderlich, um eine nachhaltige Entwicklung zum Nutzen von Mensch und Umwelt sicherzustellen.},
author = {Koh, Lian Pin},
doi = {10.1016/J.BAAE.2011.05.004},
file = {:C$\backslash$:/Users/jan/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Koh - 2011 - Balancing societies' priorities An ecologist's perspective on sustainable development.pdf:pdf},
