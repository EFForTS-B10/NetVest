@article{Grimm2016a,
abstract = {It seems that ecological modelling is currently reaching the “next level” towards predictive and re-usable theory that can support environmental decision-making (Evans et al., 2013a, Evans et al., 2013b and Grimm and Berger, 2016a). However, due to the inherent diversity of ecology, myriad unrelated approaches seem to exist, with different sub-disciplines developing along different pathways. This limits coherence and effectiveness in ecological modelling and theory development. We therefore organized this special issue and started by adopting the term “next-generation” from gene sequencing to make authors focus on those distinct advances in methods and strategies. We are not entirely serious about the term “next-generation”, as it seems more a marketing strategy for technologies than a reference to scientific revolutions in the sense of Kuhn (1962). Nevertheless, even if advances in ecological research are more gradual than abrupt, we believe that essential elements of next-generation modelling can be identified today. We identified three such elements: (1) Structural Realism, (2) Emergence and (3) Predictions, and invited contributions addressing concepts, modelling approaches, or theories related to these elements ( Grimm and Berger, 2016a).},
author = {Grimm, Volker and Berger, Uta},
doi = {10.1016/j.ecolmodel.2015.12.017},
file = {:D$\backslash$:/owncloud/LiteratureLibrary/EINSORTIEREN/EcologicalModelling{\_}SpecialIssue{\_}Next{\_}Generation/Grimm and Berger 2016-Next-generation-ecological-modelling-A-special-issue-dedicated-to-Donald-DeAngelis-on-the-occasion-of-his-70th-birthday.pdf:pdf},
issn = {03043800},
journal = {Ecological Modelling},
keywords = {Agent-based-modelling,Ecological theory,Emergence,Individual-based modelling,Predictions,Resilience,Structural realism},
pages = {1--3},
title = {{Next-generation ecological modelling: A special issue dedicated to Donald DeAngelis on the occasion of his 70th birthday}},
volume = {326},
year = {2016}
}
