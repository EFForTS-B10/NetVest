isbn = {0167-8809},
issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Carbon sequestration,Deforestation,Land degradation,Land-use change,Resource depletion,Tropical ecosystems},
pages = {110--118},
publisher = {Elsevier B.V.},
title = {{Soil degradation in oil palm and rubber plantations under land resource scarcity}},
url = {http://dx.doi.org/10.1016/j.agee.2016.07.002},
volume = {232},
year = {2016}
}
