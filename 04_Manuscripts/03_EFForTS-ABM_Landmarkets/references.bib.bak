@article{Naiman1998,
abstract = {The term riparian refers to the biotic communities and the environment$\backslash$non the shores of streams, rivers, ponds, lakes, and some wetlands.$\backslash$nIn this chapter, the phrase riparian forest refers to vegetation$\backslash$ndirectly adjacent to rivers and streams. The riparian forest extends$\backslash$nlaterally from the active channel to the uplands, thereby including$\backslash$nactive floodplains and the immediately adjacent terraces. l Riparian$\backslash$nforests of the Pacific coastal ecoregion are floristically and structurally$\backslash$nthe most diverse vegetation of the region. As complex ecological$\backslash$nsystems localized at the land-water ecotone, riparian forests maintain$\backslash$ngenerally high levels of beta and gamma diversity, exhibit high rates$\backslash$nof nutrient cycling and productivity, provide specialized ecological$\backslash$nfunctions (e.g., maintain water quality), and exert strong influences$\backslash$non adjacent ecological systems by modifying the flow of materials$\backslash$nand information (i.e., sound, visual communication) across the landscape.$\backslash$nAlterations to riparian forests have effects that go far beyond the$\backslash$nspecific activity, with the ecological consequences felt throughout$\backslash$nthe entire river corridor. l The spatial extent of the riparian forest$\backslash$nvaries longitudinally and laterally throughout the drainage network.$\backslash$nThe extent is a function of valley morphology, physical processes$\backslash$n(such as climate and hydrology), and vegetative legacies and life$\backslash$nhistory strategies. The basis for understanding riparian forest dynamics,$\backslash$ntherefore, is the watershed's geomorphology and the physical processes$\backslash$noccurring therein. l Plants of the riparian forest have numerous$\backslash$nmorphological, physiological and reproductive adaptations for life$\backslash$nin variable environments. Specific adaptations include those related$\backslash$nto flooding, sediment deposition, physical abrasion and stem breakage.$\backslash$nFor example, some riparian plants tree species establish and grow$\backslash$nupon large woody debris (LWD), while other species require the mineral$\backslash$nsoils of floodplains, and even others need saturated or flooded soils.$\backslash$nl Three closely related processes and interactions determine patterns$\backslash$nof riparian forest development and structure: responses to disturbances,$\backslash$nsoil dynamics, and biological characteristics related to succession.$\backslash$nSeveral case studies illustrate the variety of successional patterns$\backslash$nin natural settings. l Complex, interactive relationships between$\backslash$nriparian forest structure and ecosystem function impart vitality,$\backslash$nnot only to the forest, but also to the stream environment. In channels,$\backslash$nLWD partially controls the routing of water and sediment which creates$\backslash$nand maintains a variety of habitats. Roots improve stream bank stability$\backslash$nand sequester nutrients.Floodplain vegetation captures and holds$\backslash$nparticles while the forest canopy controls the light regime as well$\backslash$nas provides seasonal nourishment for organisms in the form of leaves,$\backslash$nneedles, and wood. Riparian influences on microclimate and plant$\backslash$ndiversity are determined by forest structure at several hierarchical$\backslash$nspatiotemporal scales. l Hydrologic alteration caused by river regulation$\backslash$nand forest management alters a variety of processes necessary for$\backslash$nthe establishment and maintenance of riparian vegetation. Riparian$\backslash$nforests are affected not only by alteration of the hydrologic regime$\backslash$nbut also by humaninduced changes in the transport of materials. The$\backslash$nsite-specific ecological consequences of these two changes remain$\backslash$ndifficult to predict but include alterations in species composition$\backslash$nand distribution and changes in sediment moisture retention and soil$\backslash$nbiogeochemical cycles.},
author = {Naiman, Robert J and Fetherston, Kevin L and Mckay, Steven J and Chen, Jiquan},
doi = {10.1016/S0378-1127(00)00623-X},
file = {:C$\backslash$:/Users/jan/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Naiman et al. - 1998 - Riparian Forests.pdf:pdf},
isbn = {978-0-387-95246-8},
journal = {River ecology and management: lessons from the Pacific coastal ecoregion},
pages = {289--323},
title = {{Riparian Forests}},
year = {1998}
}
@article{Guillaume2015,
abstract = {Indonesia lost more tropical forest than all of Brazil in 2012, mainly driven by the rubber, oil palm, and timber industries. Nonetheless, the effects of converting forest to oil palm and rubber plantations on soil organic carbon (SOC) stocks remain unclear. We analyzed SOC losses after lowland rainforest conversion to oil palm, intensive rubber, and extensive rubber plantations in Jambi Province on Sumatra Island. The focus was on two processes: (1) erosion and (2) decomposition of soil organic matter. Carbon contents in the Ah horizon under oil palm and rubber plantations were strongly reduced up to 70{\%} and 62{\%}, respectively. The decrease was lower under extensive rubber plantations (41{\%}). On average, converting forest to plantations led to a loss of 10 Mg C ha(-1) after about 15 years of conversion. The C content in the subsoil was similar under the forest and the plantations. We therefore assumed that a shift to higher $\delta$(13) C values in plantation subsoil corresponds to the losses from the upper soil layer by erosion. Erosion was estimated by comparing the $\delta$(13) C profiles in the soils under forest and under plantations. The estimated erosion was the strongest in oil palm (35 ± 8 cm) and rubber (33 ± 10 cm) plantations. The (13) C enrichment of SOC used as a proxy of its turnover indicates a decrease of SOC decomposition rate in the Ah horizon under oil palm plantations after forest conversion. Nonetheless, based on the lack of C input from litter, we expect further losses of SOC in oil palm plantations, which are a less sustainable land use compared to rubber plantations. We conclude that $\delta$(13) C depth profiles may be a powerful tool to disentangle soil erosion and SOC mineralization after the conversion of natural ecosystems conversion to intensive plantations when soils show gradual increase of $\delta$(13) C values with depth.},
author = {Guillaume, Thomas and Damris, Muhammad and Kuzyakov, Yakov},
doi = {10.1111/gcb.12907},
file = {:C$\backslash$:/Users/jan/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Guillaume, Damris, Kuzyakov - 2015 - Losses of soil carbon by converting tropical forest to plantations Erosion and decomposition estima.pdf:pdf},
isbn = {1365-2486 (Electronic)$\backslash$r1354-1013 (Linking)},
issn = {13652486},
journal = {Global Change Biology},
keywords = {Carbon sequestration,Deforestation,Erosion assessment,Land degradation,Organic matter decomposition,Soil organic matter,Subsoil,$\delta${\textless}sup{\textgreater}13{\textless}/sup{\textgreater}C depth profile},
number = {9},
pages = {3548--3560},
pmid = {25707391},
title = {{Losses of soil carbon by converting tropical forest to plantations: Erosion and decomposition estimated by $\delta${\textless}sup{\textgreater}13{\textless}/sup{\textgreater}C}},
volume = {21},
year = {2015}
}
@article{Gonzalez2017,
abstract = {Restoring the flooding-related disturbance regime by removing and setting back flood defenses (channel widening) is themost efficient strategy for recovering riparian plant communities in floodplains formerly impacted by human activities such as agriculture,mining, and forestry.Removing flood defenses is generally not socially accepted, and alternative recovery strategies must be explored.We assessed vegetation establishment on 33 sites in the floodplains of the Middle Ebro River and three of its tributaries (NE Spain) where restoration approaches applied in the last 20 years include channel widening, floodplain excavation, and abandonment of agriculture, gravel extraction, and hybrid poplar plantations, with and without plantation of native species. Using analysis of similarity and ordinations, we found that channel widening led to plant communities closely resembling those found on natural gravel bars, including new recruits of keystone tree species. Excavation of the floodplain as the restoration approach resulted in pioneer, non-strictly riparian communities.Abandonment of agricultural land or clearing of poplar plantations resulted in alternative stable states predominating, regardless of time elapsed since restoration and whether poles of native species were planted. However, forest-like communities relatively similar to mature, natural riparian references were attainable when hybrid poplars were allowed to resprout after clear-cutting, or after the human activities were abandoned and trees were not cut. Combining channel widening and assisted revegetation where flood defenses cannot be alteredmay partially reproduce a mosaic of habitats typical of natural floodplains},
author = {Gonz{\'{a}}lez, Eduardo and Masip, Adri{\`{a}} and Tabacchi, Eric and Poulin, Monique},
doi = {10.1111/rec.12400},
file = {:C$\backslash$:/Users/jan/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Gonz{\'{a}}lez et al. - 2017 - Strategies to restore floodplain vegetation after abandonment of human activities.pdf:pdf},
isbn = {1061-2971},
issn = {1526100X},
journal = {Restoration Ecology},
keywords = {flooding-related disturbance,floodplain forest management,hybrid poplar crop,reclamation,vegetation recovery},
number = {1},
pages = {82--91},
title = {{Strategies to restore floodplain vegetation after abandonment of human activities}},
volume = {25},
year = {2017}
}
