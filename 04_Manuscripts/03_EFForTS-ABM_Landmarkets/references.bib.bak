month = {jul},
number = {5734},
pages = {570--574},
pmid = {16040698},
publisher = {American Association for the Advancement of Science},
title = {{Global consequences of land use.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/16040698},
volume = {309},
year = {2005}
}
